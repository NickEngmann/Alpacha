<?xml version="1.0" encoding="UTF-8"?>
    <plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
            id="com.lisaseacat.twitter" version="0.0.3">
        <name>Twitter Streaming Cordova Plugin </name>
        <description>An Apache Cordova plugin for the Twitter Streaming API.  Currently only works for Android.</description>
        <license>Apache 2.0</license>
        <keywords>cordova,twitter, streaming, api, tweets, streaming api, lisa, lisa deluca, ldeluca, twitter4j, oauth, inappbrowser</keywords>
        <js-module src="www/twitter.js" name="twitter">
            <clobbers target="twitter" />
        </js-module>
        <js-module src="www/jsOAuth-1.3.7.min.js" name="jsOAuth">
            <clobbers target="jsOAuth" />
        </js-module>
        <dependency id="org.apache.cordova.inappbrowser" />
        
        <platform name="android">
	        <config-file target="res/xml/config.xml" parent="/*">
	            <feature name="Twitter">
	                <param name="android-package" value="com.lisaseacat.twitter.TwitterPlugin"/>
	            </feature>
	        </config-file>

            <source-file src="src/android/twitter4j-core-4.0.2.jar" target-dir="libs" framework="true" />
            <source-file src="src/android/twitter4j-async-4.0.2.jar" target-dir="libs" framework="true" />
            <source-file src="src/android/twitter4j-stream-4.0.2.jar" target-dir="libs" framework="true" />
	        <source-file src="src/android/TwitterPlugin.java" target-dir="src/com/lisaseacat/twitter" />
	    
	    	<config-file target="AndroidManifest.xml" parent="/manifest">
                <uses-permission android:name="android.permission.INTERNET" />        
        	</config-file>	    
	    </platform>
</plugin>